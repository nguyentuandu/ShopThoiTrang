@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<ShopThoiTrang.Models.Tag>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Models/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Danh sách nhãn sản phẩm</h6>
                             <a href="../admin/ThemNhanSanPham" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm mới
        </a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                    
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Mã nhãn sản phẩm</th>
                                            <th>Nhãn sản phẩm</th>                                          
                                            <th>Hành động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model)
                                        {
                                        <tr>
                                            <td>@item.TagId</td>
                                            <td>@item.TagName</td>
                                            
                                            
                                            <td>                                               
                                            
                                            <a   asp-action="SuaNhanSanPham"  asp-route-Pid=@item.TagId style="display: inline-block; padding: 10px 20px; margin-right: 10px; text-decoration: none; font-weight: bold; cursor: pointer; color: white; background-color: #f6c23e;">Sửa</a>
                                            
                                            <a asp-action="XoaNhanSanPham" asp-route-Pid=@item.TagId style="display: inline-block; padding: 10px 20px; text-decoration: none; font-weight: bold; cursor: pointer; color: white; background-color: #e74a3b;">Xóa</a>
                                            </td>
                                        </tr>
                                        }
                                       
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

