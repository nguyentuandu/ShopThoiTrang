@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<ShopThoiTrang.Models.User1>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Models/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Danh sách người dùng</h6>
                             <a href="../admin/ThemNguoiDung" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm mới
        </a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                    
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Mã người dùng</th>
                                            <th>Tên người dùng</th>
                                            <th>Email</th>
                                            <th>Số điện thoại</th>
                                            <th>Vai trò</th>       
                                            <th>Hành động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model)
                                        {
                                        <tr>
                                            <td>@item.CustomerId</td>
                                            <td>@item.FullName</td>
                                            <td>@item.Email</td>
                                           <td>@item.PhoneNumber</td>
                                           @if(@item.IsAdmin==true)
                                           {
                                            <td>@(item.IsAdmin.HasValue ? (item.IsAdmin.Value ? "Quản lý" : "Khách hàng") : "Không xác định")</td>
                                           }
                                           else
                                           {
                                           <td>@(item.IsAdmin.HasValue ? (item.IsAdmin.Value ? "Quản lý" : "Khách hàng") : "Không xác định")</td>
                                            
                                            <td>                                                                              
                                            <a asp-action="XoaNguoiDung" asp-route-Pid=@item.CustomerId style="display: inline-block; padding: 10px 20px; text-decoration: none; font-weight: bold; cursor: pointer; color: white; background-color: #e74a3b;">Xóa</a>
                                            </td>
                                            }                                                                                     
                                        </tr>
                                        }
                                       
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

